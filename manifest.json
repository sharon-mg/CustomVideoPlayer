{
  "manifest_version": 3,
  "name": "Custom Video Player Controls",
  "version": "1.0.0",
  "description": "Adds custom controls, keyboard shortcuts, and enhanced features to HTML5 video players",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "256": "player_logo_256.png",
    "512": "player_logo_512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Player Controls",
    "default_icon": {
      "256": "player_logo_256.png",
      "512": "player_logo_512.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
